<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeDetailRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/azul3"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageDetail"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageDetail"
            android:gravity="center_vertical"
            android:text="Nombre del pais"
            android:textColor="@color/azul4" />

        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_launcher_background" />
    </RelativeLayout>

    <TextView
        android:id="@+id/descDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:layout_marginTop="10dp"
        android:text="descripcion lalalalaa"
        android:textColor="@color/azul4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descDetail"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/webDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azul1"
            android:text="@string/visitWeb"
            android:textColor="@color/azul3" />

        <Button
            android:id="@+id/imagesDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="180dp"
            android:layout_toRightOf="@id/webDetail"
            android:backgroundTint="@color/azul1"
            android:text="@string/images"
            android:textColor="@color/azul3" />
    </RelativeLayout>

</RelativeLayout>